---
import React from "./Icons/Technologies/React.astro";
import CSS from "./Icons/Technologies/CSS.astro";
import Javascript from "./Icons/Technologies/Javascript.astro";
import Spring from "./Icons/Technologies/Spring.astro";
import Java from "./Icons/Technologies/Java.astro";
import PostgreSQL from "./Icons/Technologies/PostgreSQL.astro";
import Postman from "./Icons/Technologies/Postman.astro";
import Docker from "./Icons/Technologies/Docker.astro";
import AstroIcon from "./Icons/Technologies/AstroIcon.astro";
import Tailwind from "./Icons/Technologies/Tailwind.astro";
import GithubIcon from "./Icons/Social Media/Github.astro";
import Preview from "../components/Icons/Link.astro";

const TAGS = {
  React: {
    name: "React",
    class: "bg-gray-500 text-white",
    icon: React,
  },
  CSS: {
    name: "CSS",
    class: "bg-purple-500 text-white",
    icon: CSS,
  },
  JAVASCRIPT: {
    name: "JavaScript",
    class: "bg-[#e7c50b] text-white",
    icon: Javascript,
  },
  Spring: {
    name: "Spring",
    class: "bg-green-800 text-white",
    icon: Spring,
  },
  Java: {
    name: "Java",
    class: "bg-orange-900 text-white",
    icon: Java,
  },
  PostgreSQL: {
    name: "PostgreSQL",
    class: "bg-[#336791] text-white",
    icon: PostgreSQL,
  },
  Postman: {
    name: "Postman",
    class: "bg-[#ff6c37] text-white",
    icon: Postman,
  },
  Docker: {
    name: "Docker",
    class: "bg-[#0db7ed] text-white",
    icon: Docker,
  },
  Astro: {
    name: "Astro",
    class: "bg-gray-500 text-white",
    icon: AstroIcon,
  },
  TAILWIND: {
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: Tailwind,
  },
};

const PROJECTS = [
  {
    title: "Recipe Search API",
    description:
      "Aplicación web dinámica que permite a los usuarios buscar recetas según el nombre del plato.",
    link: "https://recipe-search-api-one.vercel.app",
    github: "https://github.com/HardCoder05/RecipeSearchAPI",
    image: "/proyecto1.webp",
    tags: [TAGS.React, TAGS.CSS, TAGS.JAVASCRIPT],
  },
  {
    title: "Git's Commands API",
    description: "API Rest utilizando Spring Boot, implementando operaciones CRUD para gestionar los comandos de Git y sus descripciones.",
    github: "https://github.com/HardCoder05/SpringBoot_MVC_APIREST",
    image: "/proyecto2.webp",
    tags: [TAGS.Spring, TAGS.Java, TAGS.PostgreSQL, TAGS.Postman, TAGS.Docker],
  },
  {
    title: "Landing Page",
    description: "Diseñé y desarrollé una página web moderna y responsive para Delta Projekter, una empresa del sector industrial, utilizando Astro y Tailwind CSS para optimizar el rendimiento y la experiencia del usuario.",
    link: "https://www.deltaprojekter.com",
    image: "/proyecto3.webp",
    tags: [TAGS.Astro, TAGS.TAILWIND, TAGS.JAVASCRIPT],
  },
];
---

{
  PROJECTS.map(({ image, title, description, link, github, tags }) => (
    <article
      class="flex flex-col gap-10 mb-10"
      data-aos="zoom-in-up"
      data-aos-duration="500"
      data-aos-once="true"
    >
      <img
        class="rounded shadow-2xl shadow-white/10 max-w-sm md:max-w-xl lg:max-w-2xl h-56 md:h-64 lg:h-80 mt-2
          xl:hover:scale-110 transition"
        src={image}
        alt={`Captura de pantalla del proyecto ${image}`}
      />
      <div>
        <h3 class="text-xl lg:text-2xl font-semibold text-white mb-2">
          {title}
        </h3>
        <ul class="flex gap-4 flex-row flex-wrap mb-2">
          {tags.map((tag) => (
            <li>
              <span
                class={`flex gap-x-2 rounded-full text-xs transition xl:hover:scale-110 ${tag.class} py-1 px-2`}
              >
                <tag.icon class="size-4" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <p class="text-sm lg:text-base text-pretty text-gray-300">
          {description}
        </p>

        <div class="flex space-x-4 md:space-x-0">
          {github && (
            <div class="w-44 h-20 flex items-center cursor-pointer">
              <a href={github} target="_blank" rel="noopener noreferrer">
                <div
                  class="relative inline-flex items-center justify-start py-3 pl-4 pr-12 overflow-hidden font-semibold 
                    shadow text-indigo-600 transition-all duration-150 ease-in-out rounded hover:pl-10 hover:pr-6 
                    bg-gray-200 group"
                >
                  <span
                    class="absolute bottom-0 left-0 w-full h-1 transition-all duration-150 ease-in-out bg-indigo-600 
                          group-hover:h-full"
                  />
                  <span class="absolute right-0 pr-4 duration-200 ease-out group-hover:translate-x-12">
                    <GithubIcon class="text-black size-5" />
                  </span>
                  <span class="absolute left-0 pl-2.5 -translate-x-12 group-hover:translate-x-0 ease-out duration-200">
                    <GithubIcon class="text-black size-5" />
                  </span>
                  <span
                    class="relative w-full text-left transition-colors duration-200 ease-in-out 
                    group-hover:text-white"
                  >
                    Code
                  </span>
                </div>
              </a>
            </div>
          )}

          {link && (
            <div class="w-full h-20 flex items-center cursor-pointer">
              <a href={link} target="_blank" rel="noopener noreferrer">
                <div
                  class="relative inline-flex items-center justify-start py-3 pl-4 pr-12 overflow-hidden font-semibold 
                    shadow text-indigo-600 transition-all duration-150 ease-in-out rounded hover:pl-10 hover:pr-6 
                    bg-gray-200 group"
                >
                  <span
                    class="absolute bottom-0 left-0 w-full h-1 transition-all duration-150 ease-in-out bg-indigo-600 
                          group-hover:h-full"
                  />
                  <span class="absolute right-0 pr-4 duration-200 ease-out group-hover:translate-x-12">
                    <Preview class="text-black size-5" />
                  </span>
                  <span class="absolute left-0 pl-2.5 -translate-x-12 group-hover:translate-x-0 ease-out duration-200">
                    <Preview class="text-black size-5" />
                  </span>
                  <span
                    class="relative w-full text-left transition-colors duration-200 ease-in-out 
                    group-hover:text-white"
                  >
                    Website
                  </span>
                </div>
              </a>
            </div>
          )}
        </div>
      </div>
    </article>
  ))
}
