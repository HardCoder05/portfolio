---
import Layout from "@/layouts/Layout.astro";
import Container from "@/components/Container.astro";
import SectionContainer from "@/components/SectionContainer.astro";
import Badge from "@/components/Badge.astro";
import LinkedinIcon from "@/components/Icons/Social Media/Linkedin.astro";
import GithubIcon from "@/components/Icons/Social Media/Github.astro";
import MailIcon from "@/components/Icons/Social Media/Mail.astro";
//import Experiencia from "@/components/Experiencia.astro";
import CodeIcon from "@/components/Icons/Code.astro";
import Proyectos from "@/components/Proyectos.astro";
import UserIcon from "@/components/Icons/User.astro";
import SobreMi from "@/components/SobreMi.astro";
import SocialPill from "@/components/SocialPill.astro";
import ContactIcon from "@/components/Icons/Mail.astro";
import Contacto from "@/components/Contacto.astro";
---

<Layout
  title="Leonardo Rico - Portfolio"
  description="Desarrollor Front-end, con un enfoque en crear soluciones eficientes y de alto impacto."
>
  <main class="p-0 md:p-10 lg:p-0">
    <Container>
      <SectionContainer
        className="py-20 md:py-36 lg:py-44 pb-28 md:pb-44 lg:pb-48"
      >
        <h1
          class="flex font-bold gap-4 text-lg md:text-2xl lg:text-3xl mb-5 text-white"
        >
          Hola, soy<strong class="text-blue-700">Ingeniero Informático</strong>
          <a href="" download class="flex justify-center items-center">
            <Badge>Descargar CV</Badge>
          </a>
        </h1>

        <h2
          class="max-w-[700px] text-sm md:text-base lg:text-xl opacity-80 text-pretty text-white"
        >
          Busco una oportunidad laboral competente donde pueda aplicar y ampliar
          mis conocimientos técnicos, contribuyendo activamente al<strong
            class="text-blue-500"
          >
            desarrollo de software.</strong
          > Actualmente, me especializo en<strong class="text-blue-500">
            desarrollo web</strong
          >, con un enfoque en crear soluciones eficientes y de alto impacto.
        </h2>

        <nav class="flex flex-wrap gap-4 mt-8 animate-fade-in-down">
          <SocialPill
            href="https://www.linkedin.com/in/leonardo-rico/"
            className="hover:border-blue-500 hover:bg-blue-500 hover:bg-opacity-25 duration-300 ease"
          >
            <LinkedinIcon class="size-4 lg:size-6" />
            Linkedin
          </SocialPill>

          <SocialPill
            href="https://github.com/HardCoder05"
            className="hover:border-purple-500 hover:bg-purple-500 hover:bg-opacity-20 duration-300 ease"
          >
            <GithubIcon class="size-5 lg:size-6" />
            Github
          </SocialPill>

          <SocialPill
            href="mailto:rio88920@gmail.com"
            className="hover:border-red-500 hover:bg-red-500 hover:bg-opacity-25 duration-300 ease"
          >
            <MailIcon class="size-4 lg:size-6" />
            rio88920@gmail.com
          </SocialPill>
        </nav>
      </SectionContainer>

      <!-- SectionContainer id="experiencia">
      <h2 class="text-white text-xl lg:text-2xl font-semibold mb-8">
        Experiencia Laboral
      </h2>
      <Experiencia />
    </SectionContainer -->

      <SectionContainer id="proyectos" className="mb-16 lg:mb-24">
        <h2
          class="text-xl lg:text-3xl font-semibold mb-6 flex gap-x-5 items-center text-white"
        >
          <CodeIcon class="size-7" />
          Proyectos
        </h2>
        <Proyectos />
      </SectionContainer>

      <SectionContainer id="sobre-mi" className="pt-16 pb-14 lg:pb-10">
        <h2
          class="flex gap-x-4 text-white text-xl lg:text-2xl font-semibold items-center mb-8"
        >
          <UserIcon class="size-7" />
          Sobre Mí
        </h2>
        <SobreMi />
      </SectionContainer>

      <SectionContainer id="contacto" className="pt-16 pb-14 lg:pb-10">
        <h2
          class="flex gap-x-4 text-white text-xl lg:text-2xl font-semibold items-center mb-8"
        >
          <ContactIcon class="size-7" />
          Contacto
        </h2>
        <Contacto />
      </SectionContainer>
    </Container>
  </main>
</Layout>
